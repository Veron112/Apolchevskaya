<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Apolchevskaya</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/Apolchevskaya.styles.css" asp-append-version="true" />
</head>
<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <header>
        <div class="container">
            <!-- Панель навигации -->
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <!-- меню сайта -->
                <a class="navbar-brand" href="#">Apolchevskaya</a>
                <div class="navbar-nav">
                    <div class="col-2">
                            <a asp-controller="Home" asp-action="Index">Лб 1</a>
                    </div>
                    <div class="col-3">
                        <a asp-controller="Product" asp-action="Index">Каталог</a>
                    </div>
                    <div class="col-3">
                        <a asp-area="admin"
                           asp-page="/index">Администрирование</a>
                        @* <a href="Index">Администрирование</a> *@
                    </div>
                    
                   @*  <a class="nav-item nav-link active" href="#">Лб 1</a>
                    <a class="nav-item nav-link" href="#">Каталог</a>
                    <a class="nav-item nav-link" href="#">Администрирование</a> *@
                </div>
                <!-- меню сайта - конец -->
                <!-- Информация пользователя -->

                @* <a class="navbar-text ms-auto" asp-controller="Cart" asp-action="Index">00,0 руб <i class="fa-solid fa-cart-shopping"></i> (0) </a> *@
                <a asp-controller="cart" asp-action="index"
                   class="navbar-text ms-auto">
                    0.00 <i class="fa-solid fa-cart-shopping"></i> 0
                </a>
               @*  <a href="#" class="navbar-text ms-auto">
                    00,0 руб <i class="fa-solid fa-cart-shopping"></i> (0)
                </a> *@

                <div class="dropdown ms-4 nav-color">
                    <button class="btn btn-secondary dropdown-toggle"
                            type="button" id="dropdownMenuButton"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        User@gmail.com
                        <img src="images/default-profile-picture.png" width="30"
                             alt="User" class="rounded nav-color" />
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li>
                            <span class="dropdown-item-text">
                                <img src="images/default-profile-picture.png"
                                     width="50" alt="User" class="rounded" />
                                user@gmail.com
                            </span>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form id="logoutForm" class="form-inline" action="#">
                                <button id="logout" type="submit" class="nav-link
btn btn-link text-dark">
                                    Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
                <!-- Информация пользователя - конец -->
            </nav> <!-- Панель навигации - конец -->

        </div><!--contanier конец-->
    </header><!--header - конец-->
    @RenderBody()
    <footer>
        <div class="container">
            <div class="navbar navbar-dark navbar-expand-md bg-dark">
                <div class="navbar-nav ms-auto">

                    <a class="nav-item nav-link" href="http://www.facebook.com">
                        <i class="fa-brands fa-facebook fa-2x">
                            <img src="images/FB.png" width="30"
                                 alt="User" class="rounded nav-color" />
                        </i>
                    </a>

                    <a class="nav-item nav-link" href="http://www.vk.com">
                        <i class="fa-brands fa-vk fa-2x">
                            <img src="images/VK.png" width="30"
                                 alt="User" class="rounded nav-color" />
                        </i>
                    </a>

                    <a class="nav-item nav-link" href="http://www.twitter.com">
                        <i class="fa-brands fa-twitter fa-2x">
                            <img src="images/Twitter.png" width="30"
                                 alt="User" class="rounded nav-color" />
                        </i>
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
