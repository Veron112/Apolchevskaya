<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Apolchevskaya</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/Apolchevskaya.styles.css" asp-append-version="true" />
</head>
<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <header>
         <div class="container">
            <!-- Панель навигации -->
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <!-- меню сайта -->
                <partial name="_MenuPartial" />
                <!-- меню сайта - конец -->
                <!-- Информация пользователя -->
                <partial name="_UserInfoPartial" />
                <!-- Информация пользователя - конец -->
            </nav> <!-- Панель навигации - конец -->
        </div><!--contanier конец-->
    </header><!--header - конец-->
    <main class="container">
    @RenderBody()
        </main class="container">
    <footer>
        <div class="container">
            <div class="navbar navbar-dark navbar-expand-md bg-dark">
                <div class="navbar-nav ms-auto">

                    <a class="nav-item nav-link" href="http://www.facebook.com">
                        <i class="fa-brands fa-facebook fa-2x">
                            <img src="images/FB.png" width="30"
                                 alt="User" class="rounded nav-color" />
                        </i>
                    </a>

                    <a class="nav-item nav-link" href="http://www.vk.com">
                        <i class="fa-brands fa-vk fa-2x">
                            <img src="images/VK.png" width="30"
                                 alt="User" class="rounded nav-color" />
                        </i>
                    </a>

                    <a class="nav-item nav-link" href="http://www.twitter.com">
                        <i class="fa-brands fa-twitter fa-2x">
                            <img src="images/Twitter.png" width="30"
                                 alt="User" class="rounded nav-color" />
                        </i>
                    </a>
                </div>
            </div>
        </div>
    </footer>
   
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
